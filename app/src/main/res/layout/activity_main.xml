<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25sp"
        app:cardElevation="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/studentCardViewId"
        android:layout_above="@id/uniStaffCardViewId"
        android:layout_marginBottom="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:textSize="22sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25sp"
        app:cardElevation="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/uniStaffCardViewId"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewUStaff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="University Staff"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:textSize="22sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25sp"
        app:cardElevation="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/uniStaffCardViewId"
        android:layout_marginTop="20dp"
        android:id="@+id/tranStaffCardViewId"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewThirdParty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transport Staff"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:textSize="22sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>